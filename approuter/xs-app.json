{
    "welcomeFile": "/launcher/index.html",
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^/$",
            "target": "/launcher/index.html",
            "service": "html5-apps-repo-runtime"
        },
        {
            "source": "^/invoiceapptwo/(.*)$",
            "target": "$1",
            "service": "html5-apps-repo-runtime",
            "authenticationType": "xsuaa"
        },
        {
            "source": "^/invoiceappthree/(.*)$",
            "target": "$1",
            "service": "html5-apps-repo-runtime",
            "authenticationType": "xsuaa"
        },
        {
            "source": "^/invoices/(.*)$",
            "target": "/invoices/$1",
            "destination": "srv-api",
            "authenticationType": "xsuaa"
        }
    ]
}