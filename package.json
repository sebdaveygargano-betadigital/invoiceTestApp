{
  "name": "invoiceapptwo",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xsenv": "^6.0.0",
    "@sap/xssec": "^4.10.0",
    "express": "^4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "@sap/cds": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29",
    "@sap/hana-client": "^2",
    "@sap/xssec": "^4",
    "@sap/xsenv": "^4"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-invoiceapptwo": "cds watch --open invoiceapptwo/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy invoiceapptwo --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "build": {
      "target": "gen",
      "tasks": [
        {
          "for": "hana",
          "src": "db",
          "options": {
            "model": [
              "db",
              "srv"
            ]
          }
        },
        {
          "for": "nodejs",
          "src": "srv"
        }
      ]
    }
  },
  "watch": {
    "exclude": [
      "node_modules/",
      "dist/",
      "db.sqlite",
      "*.log",
      ".vscode/",
      ".idea/"
    ]
  },
  "requires": {
    "auth": {
      "kind": "xsuaa"
    },
    "[production]": {
      "auth": "xsuaa"
    },
    "db": {
      "kind": "hana"
    },
    "destinations": true,
    "html5-repo": true,
    "application-logging": true
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/invoiceapptwo"
  ]
}